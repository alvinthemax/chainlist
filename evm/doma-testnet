  </div><script>
  const $ = id => document.getElementById(id)

  function buildParams(){
    const chainName = $('chainName').value.trim() || 'Doma Testnet'
    const chainId = parseInt($('chainId').value.trim()||'97476',10)
    const chainIdHex = $('chainIdHex').value.trim() || '0x'+chainId.toString(16)
    const rpc = $('rpcUrl').value.trim() || 'https://rpc-testnet.doma.xyz'
    const currency = {
      name: $('currencyName').value.trim() || 'Ether',
      symbol: $('currencySymbol').value.trim() || 'ETH',
      decimals: Number($('currencyDecimals').value) || 18
    }
    const explorer = $('explorerUrl').value.trim()
    const icon = $('iconUrl').value.trim()

    const params = {
      chainId: chainIdHex,
      chainName,
      rpcUrls: [rpc],
      nativeCurrency: currency
    }
    if (explorer) params.blockExplorerUrls = [explorer]
    if (icon) params.iconUrls = [icon]
    return params
  }

  function updatePreview(){
    const p = buildParams()
    $('preview').textContent = JSON.stringify(p, null, 2)
    $('smallChainId').textContent = $('chainId').value
    try{ $('smallRpc').textContent = new URL($('rpcUrl').value).hostname }catch(e){}
  }

  updatePreview()
  document.querySelectorAll('input').forEach(i => i.addEventListener('input', updatePreview))

  $('openExplorer').addEventListener('click', ()=>window.open($('explorerLink').href,'_blank'))

  $('copyRpc').addEventListener('click', async ()=>{
    try{ await navigator.clipboard.writeText($('rpcUrl').value); showStatus('RPC URL disalin ke clipboard','success') }catch(e){ showStatus('Gagal menyalin RPC','error') }
  })

  $('copyJson').addEventListener('click', async ()=>{
    try{ await navigator.clipboard.writeText(JSON.stringify(buildParams())) ; showStatus('JSON add-params disalin','success') }catch(e){ showStatus('Gagal menyalin JSON','error') }
  })

  $('addChainBtn').addEventListener('click', async ()=>{
    const params = buildParams()
    updatePreview()
    if (!window.ethereum){ showStatus('Wallet tidak ditemukan. Pasang MetaMask atau wallet yang kompatibel.','error'); return }

    try{
      await window.ethereum.request({ method: 'wallet_addEthereumChain', params: [params] })
      showStatus('Berhasil mengirim request ke wallet. Konfirmasi pada ekstensi jika diminta.','success')
    }catch(err){
      console.error(err)
      const msg = err && err.message ? err.message : String(err)
      showStatus('Gagal menambahkan chain: '+msg,'error')
    }
  })

  function showStatus(text, kind){
    const box = $('statusBox')
    box.innerHTML = `<div class="status ${kind==='success'?'success':'error'}">${text}</div>`
    setTimeout(()=>{ if (box.firstChild) box.firstChild.remove() }, 8000)
  }
</script></body>
</html>
